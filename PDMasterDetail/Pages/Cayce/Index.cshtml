@page "{searchString?}"
@model PDMasterDetail.Pages.Cayce.IndexModel
@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/Cayce.css" />
<link rel="stylesheet" href="~/css/CayceIndex.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<h1 style="text-align: center; margin-bottom: 24px;">Index</h1>

<form>
    <p>
        <input type="text" asp-for="SearchString" />
        <input type="submit" value="Search" style="margin-left: 6px;"/>
    </p>
    <p>
        <select asp-for="RockType" asp-items="Model.Type">
            <option value="">All</option>
        </select>
    </p>
</form>

<p>
    <a asp-page="Create">Create New</a>
</p>

<div style="background-color: seashell; padding: 2rem;">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RockClass[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RockClass[0].Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RockClass[0].Color)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RockClass[0].Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RockClass[0].Hardness)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.RockClass)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name) 
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type) 
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Color) 
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location) 
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hardness) 
                    </td>
                    <td>
                        <button><a asp-page="./Edit" asp-route-id="@item.Id">Edit</a></button>
                        <button><a asp-page="./Details" asp-route-id="@item.Id">Details</a></button>
                        <button><a asp-page="./Delete" asp-route-id="@item.Id">Delete</a></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
